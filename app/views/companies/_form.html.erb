
<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-6">
    <% if current_user.admin? %><%= f.input :our_company %><% else %><%= f.input :our_company , disabled: true %><% end %>
    <%= f.input :inn , input_html: { onchange: "myInnFunction(this.value)" } %>
    <%= f.input :kpp %>
    <%= f.input :ogrn %>
    <%= f.input :okpo %>
    <%= f.input :title %>
    <%= f.input :fulltitle %>
    <%= f.input :uraddress %>
    <%= f.input :factaddress %>
    <%= f.input :bik, input_html: { onchange: "myBikFunction(this.value)" } %>
    <%= f.input :banktitle %>
    <%= f.input :bankaccount %>
</div>
<% if  @company.our_company == true  and current_user.admin?%>
<div class="col-6 row align-content-start">
  <div class="col-12 mb-3 h3">Images</div>
  <%= f.input :images, as: :file, label: false, :input_html => { :multiple => true } %>
  <%= render '/layouts/image_form', :f => @company %>
  </div>
<% end %>
</div>
  <div class="row">
  <div class="col-3 btn-group mt-5">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Назад', :back, class: 'btn btn-outline-primary' %>
  </div>
  </div>
<% end %>
