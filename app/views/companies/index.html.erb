      <th>Uraddress</th>
      <th>Factaddress</th>
      <th>Data</th>
      <th>Bik</th>
      <th>Banktitle</th>
      <th>Bankaccount</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
    <tr id="items_table">
      <td><%= check_box_tag "company_ids[]", company.id %></td>
