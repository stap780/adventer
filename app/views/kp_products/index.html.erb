<div class="row align-items-center">
  <div class="col-3">
<h2>Kp Products</h2>
<small>Всего - <%= KpProduct.count %></small>
<%= link_to 'New Kp Product', new_kp_product_path, class: 'btn btn-outline-dark ' %>
  </div>
  <%= search_form_for @search, {class: 'form-inline col-9 pl-0 pr-0'} do |f| %>
    <div class="input-group input-group-sm">
      <%= f.search_field :id_eq , placeholder: 'id', class: "form-control", style: "max-width: 180px;" %>
      <%= button_tag(type: 'submit', :class => "btn btn-info") do %>
        <span class="oi oi-magnifying-glass"></span>
      <% end %>
      <%= link_to '<span class="oi oi-reload"></span>'.html_safe, kp_products_path, class: 'btn btn-outline-dark ' %>
      <%# link_to '<span class="oi oi-trash"></span>'.html_safe, delete_selected_kp_products_path, class: 'btn btn-secondary', id: 'deleteAll', remote: true %>
    </div>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
  <thead>
    <tr class="bg-success">
      <th><%= check_box_tag 'selectAll', value: 'selectAll'%></th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Sum</th>
      <th>Kp</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kp_products.each do |kp_product| %>
      <tr id="items_table">
        <td><%= check_box_tag "kp_product_ids[]", kp_product.id %></td>
        <td><%= kp_product.quantity %></td>
        <td><%= kp_product.price %></td>
        <td><%= kp_product.sum %></td>
        <td><%= kp_product.kp %></td>
        <td><%= kp_product.product %></td>
        <td><%= link_to '<span class="oi oi-eye"></span>'.html_safe, kp_product %></td>
        <td><%= link_to '<span class="oi oi-pencil"></span>'.html_safe, edit_kp_product_path(kp_product) %></td>
        <td><%= link_to '<span class="oi oi-trash"></span>'.html_safe, kp_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div class="apple_pagination">
<%= will_paginate @kp_products %>
</div>
