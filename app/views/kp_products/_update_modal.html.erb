<%= simple_form_for(@kp_product, url: update_by_js_kp_product_path, remote: true) do |f| %>
	<div class="modal-body">
		<% pr_desc = f.object.product.present? ? f.object.product.desc : '' %>
		<% value = f.object.desc.present? ? f.object.desc : pr_desc %>
		<%= f.input :desc, label: 'Описание', as: :text, input_html: { value: value, rows: "7" } %>
	</div>
	<div class="form-group mt-3">
		<%= submit_tag "Сохранить", class: "btn btn-primary import_file_submit", "data-bs-dismiss": "modal" %>
		<button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Отменить</button>
	</div>
<% end %>
