<tr class="nested-fields align-middle">
  <td class="w-50"><%= f.association :product, label: false, collection: Product.all.map { |product| ["("+product.sku+") "+product.title, product.id, {data: {sku: product.sku}}] } %></td>
  <td><%= f.input :quantity, as: :integer, label: false, input_html: {min: "0" , onchange: "calculate(this.value)"}%></td>
  <td><%= f.input :price, as: :decimal, label: false, input_html: {min: "0", onchange: "calculate(this.value)"}%></td>
  <td><%= f.input :sum, as: :decimal, label: false, input_html: {min: "0", onchange: "calculate(this.value)"} %></td>
  <%# f.association :kp %>
  <td><%= link_to_remove_association '<span class="oi oi-trash"></span>'.html_safe, f %></td>
</tr>
