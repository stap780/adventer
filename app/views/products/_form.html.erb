<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-12 h3"><%= page_title %></div>
    <div class="col-6">
    <%= f.input :sku %>
    <%= f.input :title, label: "Название" %>
    <%= f.input :desc, label: "Описание", as: :text  %>
    <%= f.input :quantity, label: "К-во"  %>
    <%= f.input :costprice, label: "Цена закупки"  %>
    <%= f.input :price, label: "Цена"  %>
</div>
<div class="col-6 row align-content-start">
  <div class="col-12 mb-3 h3">Изображения</div>
  <%= f.input :images, as: :file, label: false, :input_html => { :multiple => true } %>
  <%= render '/layouts/image_form', :f => @product %>
  </div>
</div>
  <div class="row">
  <div class="col-3 btn-group mt-5">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Назад', :back, class: 'btn btn-outline-primary' %>
  </div>
  </div>
<% end %>
