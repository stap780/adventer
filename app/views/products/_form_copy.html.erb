
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-6">
    <%= f.input :sku %>
    <%= f.input :title %>
    <%= f.input :desc %>
    <%= f.input :quantity %>
    <%= f.input :costprice %>
    <%= f.input :price %>
</div>
<div class="col-6 row align-content-start">
  <div class="col-12 mb-3 h3">
    Images
  </div>
  <%= render '/layouts/_image_form', :f => f %>

  <%= f.input :images, as: :file, label: false, :input_html => { :multiple => true } %>

  <% if !@product.new_record? && @product.images.present? %>
  <table class="image-table">
    <body>
    <% @product.images.each do |image| %>
    <tr>
      <td data-image="<%= image.metadata %>">
      <%= image_tag image.variant(combine_options: {auto_orient: true, thumbnail: '200x200^', gravity: 'center', extent: '200x200' }) %>
      </td>
      <td>
      <%= link_to "Delete", delete_image_products_path(@product.id, image.id), method: :delete, class: "btn btn-success delete-image", data: {confirm: "Are you sure?"}, remote: true %>
      </td>
    </tr>
    <% end %>
    </body>
  </table>
  <% end %>

  </div>
</div>
  <div class="row">
  <div class="col-3 btn-group mt-5">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Назад', :back, class: 'btn btn-outline-primary' %>
  </div>
  </div>
<% end %>
